{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "exclude": ["node_modules", "dist"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
}