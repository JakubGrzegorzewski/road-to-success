{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "exclude": ["node_modules", "dist"]
  },
}